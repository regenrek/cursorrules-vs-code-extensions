{
  "name": "cursorrules-search",
  "displayName": "Cursor Directory Rules - Search and Add",
  "description": "A simple extension that allows you to search and add .cursorrules of popular frameworks.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "publisher": "regenrek",
  "repository": "https://github.com/regenrek/cursorrules-vs-code-extension",
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorrules.searchAndAddCursorRules",
        "title": "Search and Add Cursor Rules"
      },
      {
        "command": "cursorrules.testCommand",
        "title": "Test Command"
      }
    ]
  },
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "watch-web": "webpack --watch",
    "crawl": "bun scripts/crawl-rules.ts",
    "vsce-package": "vsce package",
    "package": "npm run build && npm run vsce-package",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "minisearch": "^7.1.0",
    "ts-loader": "^9.5.1",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.2"
  }
}
