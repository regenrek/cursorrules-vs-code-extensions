{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "paths": {
      "vscode": ["./mocks/vscode.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}